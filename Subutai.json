{
  "name": "${environmentName}",
  "description": "RocketChat",
  "version": "0.0.1",
  "author": "https://github.com/lomboboo",
  "containers": [
    {
      "hostname": "${contName}",
      "template": "ubuntu-xenial",
      "peer-criteria": "HTTP-GROUP",
      "size": "${containerSize}",
      "port-mapping": [
        {
          "protocol": "HTTP",
          "domain": "${domain}",
          "internal-port": "8065",
          "external-port": "80"
        }
      ]
    }
  ],
  "peer-criteria": [
    {
      "name": "HTTP-GROUP"
    }
  ],
  "ansible-configuration": {
    "source-url": "https://github.com/lomboboo/subutai-blueprint-rocketChat/archive/master.zip",
    "ansible-playbook": "main.yml",
    "extra-vars": [
      
    ],
    "groups": [
      {
        "name": "rocket-chat",
        "hostnames": [
          "${contName}"
        ]
      }
    ]
  },
  "user-variables": {
    "environmentName": {
      "description": "Enter the environment name",
      "type": "string",
      "default": "rc",
      "validation": "[a-zA-Z0-9]+"
    },
    "domain": {
      "description": "Enter the application domain name",
      "type": "domain",
      "default": "change.the.domain",
      "validation": "[a-zA-Z0-9]+"
    },
    "siteTitle": {
      "description": "Enter the site's title",
      "type": "string",
      "default": "title"
    },
    "adminUser": {
      "description": "Site administrator user",
      "type": "string",
      "default": "admin"
    },
    "adminPwd": {
      "description": "Site administrator password",
      "type": "string",
      "default": "admin"
    },
    "contName": {
      "description": "Enter the container's hostname",
      "type": "string",
      "default": "rc",
      "validation": "[a-zA-Z0-9]+"
    },
    "containerSize": {
      "description": "Container Size",
      "type": "enum",
      "default": "SMALL",
      "validation": "SMALL,MEDIUM,LARGE,HUGE"
    }
  }
}